@model Lab5.Models.ViewModel.FlyerViewModel

<h4>Upload Flyer for @Model.FileInput.StoreTitle</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-route-id="@Model.FileInput.StoreId" method="post" enctype="multipart/form-data">
            <!-- Hidden Inputs -->
            <input type="hidden" asp-for="FileInput.StoreId" />
            <input type="hidden" asp-for="FileInput.StoreTitle" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- File Upload Input -->
            <div class="form-group">
                <label asp-for="FileInput.File" class="control-label">Upload Flyer</label>
                <input asp-for="FileInput.File" type="file" class="form-control" />
                <span asp-validation-for="FileInput.File" class="text-danger"></span>
            </div>

            <!-- Submit and Cancel Buttons -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Upload</button>
                <a asp-action="Index" asp-route-id="@Model.FileInput.StoreId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Stores" asp-action="Index" class="btn btn-secondary" style="margin-top: 5px">Back to Store List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
