@model Lab5.Models.Flyer

<h3>Are you sure you want to delete this flyer?</h3>
<div>
    <h4>Flyer Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Store
        </dt>
        <dd class="col-sm-10">
            @Model.Store.Title
        </dd>
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @Model.FileName
        </dd>
        <dt class="col-sm-2">
            Image Preview
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Url" alt="Flyer Preview" style="max-width: 200px; max-height: 200px;" />
        </dd>
    </dl>

    <form method="post" asp-action="Delete" asp-route-id="@Model.FlyerId">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-route-id="@Model.StoreId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<div>
    <a asp-controller="Stores" asp-action="Index" class="btn btn-secondary" style="margin-top: 5px">Back to Store List</a>
</div>
