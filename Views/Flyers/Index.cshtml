@model Lab5.Models.ViewModel.FlyerViewModel

<h2>Flyers for @Model.Store.Title</h2>

<p>
    <a asp-action="Create" asp-route-id="@Model.Store.Id" class="btn btn-primary">Upload New Flyer</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Image Preview</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Flyers == null || !Model.Flyers.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No flyers available.</td>
            </tr>
        }
        else
        {
            @foreach (var flyer in Model.Flyers)
            {
                <tr>
                    <td>@flyer.FileName</td>
                    <td>
                        <img src="@flyer.Url" alt="Image Preview" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@flyer.FlyerId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-controller="Stores" asp-action="Index" class="btn btn-secondary">Back to Store List</a>
</div>
